{
  "extends": "solhint:recommended",

  "rules": {
    "compiler-version": "off",
    "ordering": "error",
    "avoid-throw": "off",
    "avoid-suicide": "error",
    "avoid-sha3": "warn",
    "not-rely-on-time": "off",
    "no-console": "warn",
    "func-named-parameters": ["warn", 4],
    "func-visibility": ["warn", { "ignoreConstructors": true }]
  }
}
