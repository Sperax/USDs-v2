{
  "name": "usds-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "forge test -vvv",
    "test-contract": "forge test -vvv --match-contract",
    "test-file": "forge test -vvv --match-path",
    "test-function": "forge test -vvv --match-test",
    "install-pip-packages": "pip install -r pip-requirements.txt",
    "install-husky": "husky install",
    "prepare": "npm-run-all install-husky install-pip-packages",
    "slither-analyze": "slither .",
    "lint:fix": "prettier --write 'scripts/**/*.{js,ts}' 'test/**/*.{js,ts}' '*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "forge-coverage": "forge coverage --report lcov && lcov --remove ./lcov.info -o ./lcov.info 'test/*' && rm -rf ./coverage && genhtml lcov.info --output-dir coverage && mv lcov.info ./coverage",
    "lint-contract": "solhint 'contracts/**/*.sol' 'test/**/*.sol' -f table",
    "lint-contract:fix": "prettier --write 'contracts/**/*.sol' 'test/**/*.sol'"
  },
  "keywords": [
    "USDs",
    "Vault"
  ],
  "author": "Sperax Inc",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint": "^3.5.1",
    "solhint-plugin-prettier": "^0.0.5"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.5.1",
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts_v3.4.2": "npm:@openzeppelin/contracts@^3.4.2",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.4.3"
  }
}
