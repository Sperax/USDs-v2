{
  "name": "usds-v2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "forge test -vvv",
    "install-pip-packages": "pip3 install -r pip-requirements.txt",
    "install-husky": "husky install",
    "prepare": "npm-run-all install-husky",
    "slither-analyze": "slither .",
    "lint:fix": "prettier --write 'scripts/**/*.{js,ts}' 'test/**/*.{js,ts}' '*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "forge-coverage": "forge coverage --report lcov && rm -rf ./coverage && genhtml lcov.info --output-dir coverage && mv lcov.info ./coverage",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "lint-contract": "solhint 'contracts/**/*.sol' 'test/**/*.sol' -f table",
    "lint-contract:fix": "prettier --write 'contracts/**/*.sol' 'test/**/*.sol'"
  },
  "keywords": [
    "USDs",
    "Vault"
  ],
  "author": "Sperax Inc",
  "license": "ISC",
  "devDependencies": {
    "@foundry-rs/hardhat-forge": "^0.1.17",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.6",
    "@nomicfoundation/hardhat-foundry": "^1.0.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.8",
    "@nomicfoundation/hardhat-toolbox": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@nomiclabs/hardhat-solhint": "^3.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.27.0",
    "@typechain/ethers-v5": "^10.2.1",
    "@typechain/hardhat": "^6.1.6",
    "@types/mocha": "^10.0.1",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "hardhat": "^2.14.0",
    "hardhat-foundry": "^0.0.5",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "install": "^0.13.0",
    "prettier": "^2.8.8",
    "prettier-plugin-solidity": "^1.1.3",
    "solhint-plugin-prettier": "^0.0.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.3",
    "@openzeppelin/contracts-upgradeable": "^4.9.0",
    "npm-run-all": "^4.1.5",
    "tslint": "^6.1.3",
    "tslint-plugin-prettier": "^2.3.0"
  }
